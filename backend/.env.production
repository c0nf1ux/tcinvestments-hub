# Production Environment Variables
NODE_ENV=production
PORT=5000

# Production Database (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/brainstorm?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secure_production_jwt_secret_key_here
JWT_EXPIRE=7d

# Production API Keys
TCGPLAYER_PUBLIC_KEY=your_production_tcgplayer_public_key
TCGPLAYER_PRIVATE_KEY=your_production_tcgplayer_private_key
POKEMON_TCG_API_KEY=your_production_pokemon_api_key
GOOGLE_VISION_API_KEY=your_production_google_vision_key

# Stripe Production Keys
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key

# AWS Production Configuration
AWS_ACCESS_KEY_ID=your_production_aws_access_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_key
AWS_S3_BUCKET=brainstorm-production-files

# Security Configuration
CORS_ORIGIN=https://brainstorm.vercel.app
RATE_LIMIT=1000
